<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stone.recyclerviewandcardview" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LinearActivity"
            android:label="@string/title_activity_linear" >
        </activity>
        <activity
            android:name=".CardViewActivity"
            android:label="@string/title_activity_card_view" >
        </activity>
        <activity
            android:name=".bigActivity"
            android:label="@string/title_activity_big" >
        </activity>
        <activity
            android:name=".expandableActivity"
            android:label="@string/title_activity_expandable" >
        </activity>
    </application>

</manifest>
